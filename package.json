{
  "name": "weather-forecast",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit --skipLibCheck && vite build",
    "preview": "vite preview",
    "lint": "eslint --max-warnings=0 --ext .ts,.tsx ./src --fix",
    "format": "prettier --config .prettierrc '**/*.tsx' '**/*.ts' --write",
    "test": "jest -c src/test/jest.config.js",
    "test:ci": "jest -c src/test/jest.config.js --collectCoverage --ci  --updateSnapshot",
    "test:coverage": "jest -c src/test/jest.config.js --collectCoverage --verbose",
    "test:update": "jest -c src/test/jest.config.js --collectCoverage --verbose --updateSnapshot",
    "test:watch": "jest -c src/test/jest.config.js --collectCoverage --verbose --watch",
    "sonar": "node sonarqube-scanner.js"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "@reduxjs/toolkit": "^1.6.2",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.1",
    "@types/node": "^12.0.0",
    "@types/nprogress": "^0.2.0",
    "@types/react-dom": "^18.0.5",
    "@types/react-router-dom": "^5.3.3",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "axios": "^0.26.1",
    "bootstrap-css-only": "^4.4.1",
    "dayjs": "^1.10.7",
    "downshift": "^6.1.12",
    "html-react-parser": "^1.4.11",
    "jest-styled-components": "^7.0.4",
    "lint-staged": "^12.3.7",
    "lodash": "^4.17.21",
    "nprogress": "^0.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-intl": "^5.24.0",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.3.0",
    "redux-injectors": "^1.3.0",
    "redux-toolkit-saga": "^1.2.0",
    "sinon": "^14.0.1",
    "styled-components": "^5.3.5",
    "ts-jest": "^28.0.5"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.182",
    "@types/react-dom": "^18.0.5",
    "@types/react-helmet": "^6.1.5",
    "@types/react-router": "^5.1.17",
    "@types/react-router-dom": "^5.3.3",
    "@types/sinon": "^10.0.13",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "@vitejs/plugin-react": "^1.0.7",
    "eslint": "^8.13.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-redux-saga": "^1.2.1",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "less": "^4.1.3",
    "less-loader": "^11.0.0",
    "prettier": "^2.6.2",
    "prop-types": "^15.8.1",
    "typescript": "^4.5.4",
    "vite": "2.9.13",
    "vite-tsconfig-paths": "^3.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss}": [
      "yarn run lint",
      "prettier --write",
      "git add"
    ]
  }
}
